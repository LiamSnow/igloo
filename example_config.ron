    ui: [
        ("lights", [
            RGBCTLight("kitchen"),
            RGBCTLight("living"),
            RGBCTLight("bar"),
            RGBCTLight("crib"),
            Button(
                name: "all_off",
                on_click: "light all off"
            ),
            Button(
                name: "crib_off",
                on_click: "light crib off"
            ),
            Button(
                name: "example",
                on_click: "script run example"
            )
        ]),
        ("alarms", [
            Time("crib.sleep"),
            Time("crib.wakeup"),
        ])
    ],

    // Use python, rust, or ron syntax to expand functionality
    // Note: Rust scripts are declared in `src/scripts/builtin`
    scripts: {
        "example": Python(
            claims: {
                Light: ["$1"],
                Switch: ["$2"]
            },
            file: "example.py"
        ),
        "example_basic": Basic(
            claims: {
                Light: ["$1", "$2"]
            },
            body: [
                Forever([
                    Command("light $1 hue 0"),
                    Command("light $2 hue 100"),
                    Delay(500),
                    Command("light $2 hue 0"),
                    Command("light $1 hue 100"),
                    Delay(500),
                ])
            ]
        ),
        "wakeup_change": Basic(
            body: [
                HttpPost(
                    url: "http://192.168.1.43/alarm/time",
                    body: "$1"
                )
            ],
        ),
    },
)
