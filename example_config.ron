                noise_psk: "",
            ),
            "japan": ESPHome(
                ip: "192.168.1.116",
                noise_psk: ""
            ),
            "wakeup": PeriodicTask(
                type: Time(
                    default: "10:00 AM",
                ),
                on_change: "script run wakeup_change ${value}",
                trigger_offset: -1200,
                on_trigger: "script run brightness-change crib 100 0 1200",
            ),
            "sleep": PeriodicTask(
                type: Time(
                    default: "10:00 PM",
                ),
                on_trigger: "light crib off"
            ),
        },

        "kitchen": {
            "top": ESPHome(
                ip: "192.168.1.31",
