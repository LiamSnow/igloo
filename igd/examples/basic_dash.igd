dashboard "Home Overview" {
	let a = 2;

	// Observe, FilterSet, Bind

    let all_lights_on = Observe<
		Switch,
        aggregate: any,
    >;

    let dimmer = Bind<
		Dimmer,
        aggregate: mean,
        where {
            with(Light)
        }
    >;

    VStack {
		HStack (justify: center) {
			Text("Hi", size: 10)

			if 10 > 2 {
				Text("10 is greater than 2")
			} else {
				Text("10 is not greater than 2")
			}
		}
    }
}
